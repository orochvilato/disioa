{{ for iv in itvs: }}
    <li class="itv-item">
        <i class="fa fa-comment"></i>
        <a href="{{ =iv['itv_url']}}" target="_blank">
            <h3>{{ =' / '.join(iv['itv_ctx']) }}</h3>
        </a>
        <blockquote><b><a href="{{ =URL('depute','fiche',args=[iv['depute_id'][2:] if iv['depute_id'][:2]='m.' else iv['depute_id'][3:]]) }}">{{ =iv['depute_nom'] }}</a></b> {{ =XML(iv['itv_contenu']) }}</blockquote>
    </li>
{{ pass }}
{{ if next: }}
    <div class="pagination__next"></div>
{{ pass }}
